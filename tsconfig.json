{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "strict": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@src/*": ["src/*"],
      "@ui/*": ["ui-src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "ui-src/**/*.ts", 
    "shared/**/*.ts",
    "./node_modules/@figma/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "plugin-src"
  ]
}
